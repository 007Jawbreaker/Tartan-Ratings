<h1>Listing cafeteria</h1>

<table>
  <thead>
    <tr>
      <th>Item name</th>
      <th>Item description</th>
      <th>Item price</th>
      <th>Cafeteria category</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cafeteria.each do |cafeterium| %>
      <tr>
        <td><%= cafeterium.item_name %></td>
        <td><%= cafeterium.item_description %></td>
        <td><%= cafeterium.item_price %></td>
        <td><%= cafeterium.cafeteria_category_id %></td>
        <td><%= link_to 'Show', cafeterium %></td>
        <td><%= link_to 'Edit', edit_cafeterium_path(cafeterium) %></td>
        <td><%= link_to 'Destroy', cafeterium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

